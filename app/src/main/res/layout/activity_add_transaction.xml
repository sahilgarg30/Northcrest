<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    tools:context="com.ananyagupta.northcrest.SettingsActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter the details of the transaction as - "
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_margin="8dp"/>
        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:hint="Customer " />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_margin="8dp"
            android:hint="Amount in Dollars" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction type - "
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_margin="8dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <RadioButton
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:id="@+id/debit_rb"
                android:layout_width="match_parent"
                android:checked="true"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Debit" />
            <RadioButton
                android:id="@+id/credit_rb"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Credit" />
        </RadioGroup>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_trans_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="handleTransaction"
            android:backgroundTint="@color/colorAccent"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Add transaction"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    </ScrollView>